<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.User.SecurityFragment">

    <Button
        android:id="@+id/submitSecurityChangeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="128dp"
        android:text="Submit Changes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newPasswordField" />

    <EditText
        android:id="@+id/currentEmailField"
        android:layout_width="206dp"
        android:layout_height="78dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="108dp"
        android:ems="10"
        android:hint="Current Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/currentPasswordField"
        android:layout_width="203dp"
        android:layout_height="69dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="104dp"
        android:ems="10"
        android:hint="Current Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentEmailField" />

    <EditText
        android:id="@+id/newEmailField"
        android:layout_width="198dp"
        android:layout_height="77dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="104dp"
        android:ems="10"
        android:hint="New Email (Optional)"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentPasswordField" />

    <EditText
        android:id="@+id/newPasswordField"
        android:layout_width="197dp"
        android:layout_height="63dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="104dp"
        android:ems="10"
        android:hint="New Password (Optional)"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newEmailField" />

</androidx.constraintlayout.widget.ConstraintLayout>