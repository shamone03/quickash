<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/jobApplicant"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <Button
        android:id="@+id/jobApplicantButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:textColor="#00FFFFFF"
        android:translationZ="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Job Applicant" />

    <ImageView
        android:id="@+id/jobApplicantAvatar"
        android:layout_width="85dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/jobApplicantButton"
        app:layout_constraintStart_toStartOf="@+id/jobApplicantButton"
        app:layout_constraintTop_toTopOf="@+id/jobApplicantButton"
        app:srcCompat="@drawable/googleg_disabled_color_18"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/jobApplicantName"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="15dp"
        android:text="John Doe"
        android:textColor="#FFFFFF"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/jobApplicantButton"
        app:layout_constraintStart_toEndOf="@+id/jobApplicantAvatar"
        app:layout_constraintTop_toTopOf="@+id/jobApplicantButton"
        app:layout_constraintVertical_bias="0.415" />

    <TextView
        android:id="@+id/jopApplicantRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:text="Employee Rating:"
        android:textColor="#FFFFFF"
        android:translationZ="2dp"
        app:layout_constraintStart_toEndOf="@+id/jobApplicantAvatar"
        app:layout_constraintTop_toBottomOf="@+id/jobApplicantName" />
</androidx.constraintlayout.widget.ConstraintLayout>